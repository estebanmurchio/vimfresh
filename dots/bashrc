fresh_find_git_branch() {
    local branch
    if branch=$(git rev-parse --abbrev-ref HEAD 2> /dev/null); then
        if [[ "$branch" == "HEAD" ]]; then
             branch="detached*"
        fi
        git_branch=" $branch"
    else
        git_branch=" -"
    fi
}

fresh_find_git_dirty() {
    local status=$(git status --porcelain 2> /dev/null)
    git_dirty=""
    if [[ "$status" != "" ]]; then
        git_dirty=" ≠"
    else
        if [[ "$git_branch" != "" ]]; then
            git_dirty=""
        fi
    fi
}

PROMPT_COMMAND=""
PROMPT_COMMAND="fresh_find_git_branch;fresh_find_git_dirty;$PROMPT_COMMAND"

if [ -f ~/.prev_dir ]; then
    cd $(cat ~/.prev_dir)
fi

SH_ERROR="\[\e[37;44m\] \$? \[$(tput sgr0)\]\[\e[34;47m\]\[\e[m\]"
SH_CLOCK="\[\e[37;44m\] \A \[\e[34;47m\]\[\e[m\]"
SH_GIT="\[\e[37;44m\] \$git_branch\$git_dirty \[\e[34;47m\]\[\e[m\]"
SH_CWD="\[\e[37;44m\] \w \[\e[34;47m\]\[\e[m\]"
SH_UID="\[\e[37;44m\] \$ \[\e[34;47m\]\[\e[m\]"

export PS1="$SH_ERROR$SH_CLOCK$SH_GIT$SH_CWD$SH_UID "
export TERM=xterm-256color
export EDITOR="vim"
export HISTSIZE="500"
export HISTCONTROL="ignoreboth"
export HISTIGNORE="clear:history"
export CLICOLOR=1
export LSCOLORS=ExFxBxDxCxegedabagacad
